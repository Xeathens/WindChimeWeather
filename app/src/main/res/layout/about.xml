<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_thank"
            android:gravity="center"
            android:text="@string/thank_title"
            android:textColor="@color/yunahu"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:background="#60d3d3d3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thank_text"
            android:textColor="@color/baomo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:background="#60d3d3d3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_link"
            android:gravity="center"
            android:text="@string/link_title"
            android:textColor="@color/yunahu"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:background="#60d3d3d3"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:columnCount="2">

            <Button
                android:id="@+id/bt_roast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableStart="@drawable/ic_roast"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:gravity="start|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/baomo"
                android:text="吐槽"/>
            <Button
                android:id="@+id/bt_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:drawableStart="@drawable/ic_upgrade"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:gravity="start|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/baomo"
                android:text="检查更新"/>
            <Button
                android:id="@+id/bt_donate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableStart="@drawable/ic_money"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:gravity="start|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/baomo"
                android:text="赏根头发"/>
            <Button
                android:id="@+id/bt_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:drawableStart="@drawable/ic_share"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:gravity="start|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/baomo"
                android:text="分享风铃天气"/>


        </GridLayout>

    </LinearLayout>


</LinearLayout>