<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_thank"
            android:gravity="center"
            android:text="@string/thank_title"
            android:textColor="@color/yunahu"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:background="#60d3d3d3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/thank_text"
            android:textColor="@color/baomo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:background="#60d3d3d3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_link"
            android:gravity="center"
            android:text="@string/link_title"
            android:textColor="@color/yunahu"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:background="#60d3d3d3"/>


    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="55dp"
        android:columnCount="2">

        <TextView
            android:id="@+id/bt_roast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"


            android:drawableStart="@drawable/ic_roast"
            android:drawablePadding="10dp"

            android:gravity="start|center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/baomo"
            android:text="我要吐槽"/>
        <TextView
            android:id="@+id/bt_upgrade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"



            android:drawableStart="@drawable/ic_upgrade"
            android:drawablePadding="10dp"

            android:gravity="start|center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/baomo"
            android:text="检查更新"/>
        <TextView
            android:id="@+id/bt_donate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"


            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_money"
            android:drawablePadding="10dp"

            android:gravity="start|center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/baomo"
            android:text="赏根头发"/>
        <TextView
            android:id="@+id/bt_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"



            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_share"
            android:drawablePadding="10dp"

            android:gravity="start|center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/baomo"
            android:text="分享风铃"/>

        <TextView
            android:id="@+id/bt_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_code"
            android:drawablePadding="10dp"

            android:gravity="start|center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/baomo"
            android:text="查看源码"/>

        <TextView
            android:id="@+id/bt_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_contact"
            android:drawablePadding="10dp"

            android:gravity="start|center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/baomo"
            android:text="联系作者"/>


    </GridLayout>

</LinearLayout>