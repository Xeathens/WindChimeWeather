<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    app:cardBackgroundColor="@color/bg_lifestyle"
    app:cardCornerRadius="@dimen/card_corner_lifestyle"
    app:cardElevation="@dimen/card_elevation">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"

            android:layout_row="0"
            android:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"

                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_uv" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="紫外线"
                    android:textColor="@color/txt_lifestyle"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/lifestyle_uv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/txt_lifestyle"
                    android:textSize="15sp"

                    tools:text="弱" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"

            android:layout_row="0"
            android:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"

                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_archery" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="运动指数"
                    android:textColor="@color/txt_lifestyle"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/lifestyle_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/txt_lifestyle"
                    android:textSize="15sp"

                    tools:text="较不宜" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"

            android:layout_columnWeight="1"
            android:layout_marginBottom="15dp"

            android:layout_row="1"
            android:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"

                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_hum" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="湿度"
                    android:textColor="@color/txt_lifestyle"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/lifestyle_hum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/txt_lifestyle"
                    android:textSize="15sp"

                    tools:text="63%" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="15dp"

            android:layout_row="1"
            android:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"

                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_comf" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="舒适度"
                    android:textColor="@color/txt_lifestyle"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/lifestyle_comf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/txt_lifestyle"
                    android:textSize="15sp"

                    tools:text="不宜" />

            </LinearLayout>


        </LinearLayout>


    </GridLayout>

</android.support.v7.widget.CardView>