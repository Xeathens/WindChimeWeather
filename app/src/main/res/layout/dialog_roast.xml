<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_roast"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="能告诉我你是谁吗"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/edit_roast_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_1"
        android:theme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_roast_name"
        android:text="你想说的话"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/edit_roast_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_2"
        android:theme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/bt_send_roast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_roast_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text="发送"
        android:textColor="@color/colorPrimary"/>


</RelativeLayout>